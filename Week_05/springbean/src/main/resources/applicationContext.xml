<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="student" class="com.liq.bean.Student">
        <property name="name" value="tom"></property>
        <property name="age" value="12"></property>
    </bean>

    <bean id="students02Service" class="com.liq.service.impl.Student02ServiceImpl">
        <!-- 构造器方式注入bean -->
        <constructor-arg name="studentsDao" ref="studentsDao"></constructor-arg>
    </bean>

    <bean id="students03Service" class="com.liq.service.impl.Student03ServiceImpl">
        <!-- set方法进行注入-->
        <property name="studentDao" ref="studentsDao"></property>
    </bean>

    <context:component-scan base-package="com.liq"></context:component-scan>

    <bean id="studentsDao" class="com.liq.dao.StudentDao">

    </bean>
</beans>
